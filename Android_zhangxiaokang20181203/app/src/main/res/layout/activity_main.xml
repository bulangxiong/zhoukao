<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/image_soushuo"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/soushuo"/>
        <EditText
            android:id="@+id/edit_wen"
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:layout_height="wrap_content" />
        <Button
            android:id="@+id/btn_quxiao"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:text="取消"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="10dp"
            android:text="最近搜索"/>
        <ImageView
            android:id="@+id/image_shanchu"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/shanchu"/>
    </LinearLayout>

    <com.bwei.android_zhangxiaokang20181203.ZuiJinSouShuoView
        android:id="@+id/zuijin_layout"
        android:layout_width="match_parent"
        android:layout_height="285dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="applat"
            android:padding="10dp"
            android:textSize="20sp"/>
    </com.bwei.android_zhangxiaokang20181203.ZuiJinSouShuoView>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="搜索发现"/>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="考拉三周年人气热"
            android:padding="10dp"
            android:textSize="20sp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="电动牙刷"
            android:padding="10dp"
            android:textSize="20sp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="尤妮佳"
            android:padding="10dp"
            android:textSize="20sp"/>
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="豆豆鞋"
            android:padding="10dp"
            android:textSize="20sp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="沐浴露"
            android:padding="10dp"
            android:textSize="20sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="日东红茶"
            android:padding="10dp"
            android:textSize="20sp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="榴莲"
            android:padding="10dp"
            android:textSize="20sp"/>
    </LinearLayout>

</LinearLayout>